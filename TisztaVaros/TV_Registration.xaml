<Window x:Class="TisztaVaros.TV_Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TisztaVaros"
        mc:Ignorable="d"
        Title="Registration" Height="450" Width="800" ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="{x:Type TextBox}">
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="7" />
                </Style>
            </Style.Resources>
        </Style>
        <Style TargetType="{x:Type Button}">
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="7" />
                </Style>
            </Style.Resources>
        </Style>
    </Window.Resources>

    <Grid Background="#FFFDF5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel 
        HorizontalAlignment="Center"
        VerticalAlignment="Center" >
            <Image Width="350">
                <Image.Source>
                    <BitmapImage UriSource="https://smd.hu/Team/tisztavaros_logo_Middle.png" />
                </Image.Source>
            </Image>
        </StackPanel>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.7*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="0.7*"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="1" Content="REGISZTRÁCIÓ:" 
               FontSize="25" 
               HorizontalAlignment="Center"
               VerticalAlignment="Center"/>
            <TextBox Grid.Row="2"  TextChanged="T_Changed"
                Name="Inp_Name" FontSize="16"
                FontWeight="Bold" Width="250" Height="40"
                HorizontalContentAlignment="Center" 
                VerticalContentAlignment="Center"/>
            <Label Grid.Row="2" x:Name="txtUserPlaceholder" Content="user"
                   VerticalContentAlignment="Center"
                   Background="Transparent" Opacity="0.5"
                   Margin="40,15,216,18" Width="60" Height="23"
                   IsHitTestVisible="False"/>
            <TextBox Grid.Row="3"  TextChanged="T_Changed"
                     Name="Inp_Email" FontSize="16"                     
                     FontWeight="Bold" Width="250" Height="40"
                     HorizontalContentAlignment="Center" 
                     VerticalContentAlignment="Center"/>
            <Label Grid.Row="3" x:Name="txtEmailPlaceholder" Content="email"
                   VerticalContentAlignment="Center"
                   Background="Transparent" Opacity="0.5"
                   Margin="40,15,216,18" Width="60" Height="23"
                   IsHitTestVisible="False"/>
            <TextBox Grid.Row="4" Name="Inp_PSW" FontSize="16"  
                     TextChanged="T_Changed"  MaxLength="12"
                     FontWeight="Bold" Width="250" Height="40"
                     HorizontalContentAlignment="Center" 
                     VerticalContentAlignment="Center"/>
            <Image Grid.Row="3" Panel.ZIndex="4" MouseUp="PswOnOff"
                   Name="PictView1" Width="20" Margin="255,58,35,0"
                   Grid.RowSpan="2">
                <Image.Source>
                    <BitmapImage UriSource="https://smd.hu/Team/show_psw.png" />
                </Image.Source>
            </Image>
            <Label Grid.Row="4" x:Name="txtPswPlaceholder" Content="jelszó"
                   VerticalContentAlignment="Center"
                   Background="Transparent" Opacity="0.5"
                   Margin="40,15,216,18" Width="60" Height="28"
                   IsHitTestVisible="False"/>
            <TextBox Grid.Row="5" Name="Inp_PSW2" FontSize="16"   
                     TextChanged="T_Changed"  MaxLength="12"
                     FontWeight="Bold" Width="250" Height="40"
                     HorizontalContentAlignment="Center" 
                     VerticalContentAlignment="Center"/>
            <Image Grid.Row="4" Panel.ZIndex="4" MouseUp="PswOnOff"
                   Name="PictView2" Width="20" Margin="255,58,35,0"
                   Grid.RowSpan="2">
                <Image.Source>
                    <BitmapImage UriSource="https://smd.hu/Team/show_psw.png" />
                </Image.Source>
            </Image>
            <Label Grid.Row="5" x:Name="txtPsw2Placeholder" Content="jelszó"
               VerticalContentAlignment="Center"
               Background="Transparent" Opacity="0.5"
               Margin="40,15,216,18" Width="60" Height="28"
               IsHitTestVisible="False"/>
            <Button Grid.Row="6" Click="Server_Registration" 
                Content="REGISZTRÁCIÓ" Width="250" Margin="15,5,15,5"
                FontSize="17" Foreground="White"
                Background="#6FB1A5">
                <Button.BitmapEffect>
                    <DropShadowBitmapEffect Color="Gray" Direction="-80"
                ShadowDepth="5" Softness=".5" />
                </Button.BitmapEffect>
            </Button>
        </Grid>
    </Grid>
</Window>

