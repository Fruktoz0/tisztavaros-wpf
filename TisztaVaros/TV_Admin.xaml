<Window x:Class="TisztaVaros.TV_Admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TisztaVaros"
        mc:Ignorable="d"
        Title="Tiszta Város Admin:" Height="850" Width="1500" ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="{x:Type TextBox}">
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="4" />
                </Style>
            </Style.Resources>
        </Style>
        <Style TargetType="{x:Type Button}">
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="3" />
                </Style>
            </Style.Resources>
        </Style>
        <Style TargetType="{x:Type ComboBox}">
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="3" />
                </Style>
            </Style.Resources>
        </Style>
        <Style TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Center" />
        </Style>
    </Window.Resources>
    <Grid Background="#FFFDF5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="235"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="115"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Name="OldalSav" Height="700" Width="300" HorizontalAlignment="Center" VerticalAlignment="Top" >
                <Image MouseLeftButtonUp="Logo_Click" Source="https://smd.hu/Team/tisztavaros_logo_Middle_NoText.png" Height="120"/>
            </StackPanel>
            <Button Grid.Row="2" Name="B_Users" Click="Get_Admin_Users" Content="Felhasználók:" Margin="15,10,15,15" FontSize="17" Foreground="White" Background="#6FB1A5">
                <Button.BitmapEffect>
                    <DropShadowBitmapEffect Color="Gray" Direction="-80" ShadowDepth="5" Softness=".5" />
                </Button.BitmapEffect>
            </Button>
            <Image Grid.Row="2" Panel.ZIndex="4" Width="20" Margin="15,-2,175,0">
                <Image.Source>
                    <BitmapImage UriSource="https://smd.hu/Team/Icon_User_Big4.png" />
                </Image.Source>
            </Image>
            <Button Grid.Row="3" Name="B_Reports" Click="Get_Admin_Reports" Content="Bejelentések:" Margin="15,10,15,15" FontSize="17" Foreground="White" Background="#6FB1A5">
                <Button.BitmapEffect>
                    <DropShadowBitmapEffect Color="Gray" Direction="-80" ShadowDepth="5" Softness=".5" />
                </Button.BitmapEffect>
            </Button>
            <Image Grid.Row="3" Panel.ZIndex="4" Width="22" Margin="15,-2,175,0">
                <Image.Source>
                    <BitmapImage UriSource="https://smd.hu/Team/Icon_Reports_Big.png" />
                </Image.Source>
            </Image>
            <Button Grid.Row="4" Name="B_Cats" Click="Get_Admin_Categories" Content="Kategoriák:" Margin="15,10,15,15" FontSize="17" Foreground="White" Background="#6FB1A5">
                <Button.BitmapEffect>
                    <DropShadowBitmapEffect Color="Gray" Direction="-80" ShadowDepth="5" Softness=".5" />
                </Button.BitmapEffect>
            </Button>
            <Image Grid.Row="4" Panel.ZIndex="4" Width="20" Margin="15,-2,175,0">
                <Image.Source>
                    <BitmapImage UriSource="https://smd.hu/Team/Icon_Reports_Big.png" />
                </Image.Source>
            </Image>
            <Button Grid.Row="5" Name="B_Institutions" Click="Get_Admin_Institutions" Content="Intézmények:" Margin="15,10,15,15" FontSize="17" Foreground="White" Background="#6FB1A5">
                <Button.BitmapEffect>
                    <DropShadowBitmapEffect Color="Gray" Direction="-80" ShadowDepth="5" Softness=".5" />
                </Button.BitmapEffect>
            </Button>
            <Image Grid.Row="5" Panel.ZIndex="4" Width="20" Margin="15,-2,175,0">
                <Image.Source>
                    <BitmapImage UriSource="https://smd.hu/Team/Icon_Inst_Big.png" />
                </Image.Source>
            </Image>
            <Button Grid.Row="6" Name="B_Challenges" Click="Get_Admin_Challenges" Content="Kihívások:" Margin="15,10,15,15" FontSize="17" Foreground="White" Background="#6FB1A5">
                <Button.BitmapEffect>
                    <DropShadowBitmapEffect Color="Gray" Direction="-80" ShadowDepth="5" Softness=".5" />
                </Button.BitmapEffect>
            </Button>
            <Image Grid.Row="6" Panel.ZIndex="4" Width="20" Margin="15,-2,175,0">
                <Image.Source>
                    <BitmapImage UriSource="https://smd.hu/Team/Icon_Inst_Big.png" />
                </Image.Source>
            </Image>
            <CheckBox Click="HTTP_Local_Click" x:Name="HTTP_Local" Content="HTTP Local" FontSize="10" FontWeight="Bold" Margin="150,4,3,91" Height="20" IsChecked="True"/>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="125"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Background="#FFFDF5">
                <StackPanel Name="Header_Ini" Background="#FFFDF5"  Visibility="Hidden">
                    <Label Content="Üdvözöllek az Admin felületen!" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,0"/>
                    <Label Content="Itt kezelheted a felhasználókat, bejelentéseket, kategóriákat, intézményeket és kihívásokat." FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>
                <StackPanel Name="Header_Institutions" Background="#FFFDF5" Visibility="Visible">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="6"/>
                            <RowDefinition Height="38"/>
                            <RowDefinition Height="38"/>
                            <RowDefinition Height="38"/>
                            <RowDefinition Height="5"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Grid.Column="0" Panel.ZIndex="4" Margin="12,0,1150,2" Height="80" Grid.RowSpan="3">
                            <Image Name="Inst_LogoImg" MouseLeftButtonUp="Inst_Logo" Source="https://smd.hu/Team/Empty_Logo.gif" MaxWidth="80" Height="80"/>
                        </StackPanel>
                        <Label Grid.Row="1" Content="Intézmény Neve:" FontSize="18" FontWeight="Bold" Width="158"
                               HorizontalAlignment="Left" HorizontalContentAlignment="Right" Margin="100,0,0,0"/>
                        <TextBox Grid.Row="1" Name="U_Inst_Name" FontSize="16" FontWeight="Bold" Height="30" TextChanged="SelInst_DataChanged"
                                HorizontalContentAlignment="Center" Margin="265,4,730,4" VerticalContentAlignment="Center" Padding="0,0,0,3"/>

                        <Label Grid.Row="2" Content="Email:" FontSize="18" FontWeight="Bold" Width="70"
                                 HorizontalAlignment="Left" HorizontalContentAlignment="Right" Margin="100,0,0,0"/>
                        <TextBox Grid.Row="2" Name="U_Inst_Email" FontSize="16" FontWeight="Bold" Height="30" TextChanged="SelInst_DataChanged"
                                HorizontalContentAlignment="Center" Margin="180,4,730,4" VerticalContentAlignment="Center" Padding="0,0,0,3"/>

                        <Label Grid.Row="3" Content="Leírás:" FontSize="18" FontWeight="Bold" Width="70"
                                 HorizontalAlignment="Left" HorizontalContentAlignment="Right" Margin="100,0,0,0"/>
                        <TextBox Grid.Row="3" Name="U_Inst_Desc" FontSize="16" FontWeight="Bold" Height="30" TextChanged="SelInst_DataChanged"
                                HorizontalContentAlignment="Center" Margin="180,4,360,4" VerticalContentAlignment="Center" Padding="0,0,0,3"/>


                        <Label Grid.Row="1" Content="Zip:" FontSize="18" FontWeight="Bold" Width="46" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Margin="530,0,0,0"/>
                        <TextBox Grid.Row="1" Name="U_Inst_Zip" FontSize="16" FontWeight="Bold" Height="30" TextChanged="SelInst_DataChanged" 
                                 HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="580,4,595,4" Padding="0,0,0,3"/>

                        <Label Grid.Row="1" Content="City:" FontSize="18" FontWeight="Bold" HorizontalContentAlignment="Right" Margin="560,0,530,0"/>
                        <TextBox Grid.Row="1" Name="U_Inst_City" FontSize="16" FontWeight="Bold" Height="30" TextChanged="SelInst_DataChanged" 
                                 HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="723,4,285,4" Padding="0,0,0,3"/>

                        <Label Grid.Row="2" Content="Address:" FontSize="18" FontWeight="Bold" HorizontalContentAlignment="Right" Margin="435,0,632,0"/>
                        <TextBox Grid.Row="2" Name="U_Inst_Address" FontSize="16" FontWeight="Bold" Height="30" TextChanged="SelInst_DataChanged" 
                                 HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="625,4,120,4" Padding="0,0,0,3"/>

                        <Label Grid.Row="1" Content="Tel:" FontSize="18" FontWeight="Bold" HorizontalContentAlignment="Right" Margin="970,0,235,0"/>
                        <TextBox Grid.Row="1" Name="U_Inst_Tel" FontSize="16" FontWeight="Bold" Height="30" TextChanged="SelInst_DataChanged" 
                                 HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="1020,4,38,4" Padding="0,0,0,3"/>

                        <Button Grid.Row="3" Name="U_Inst_ReLoad" Click="Inst_ReLoad" Content="Reload" Margin="11,5,1150,5" FontSize="18" FontWeight="Bold" Padding="0,0,0,3"/>
                        <Button Grid.Row="3" Name="U_Inst_SaveNew" Click="Inst_SaveAsNew" Content="Save as New" Margin="1000,5,120,5" FontSize="18" FontWeight="Bold" Padding="0,0,0,3"/>
                        <Button Grid.Row="2" Grid.Column="2" Name="U_Inst_Logo" Click="Inst_Logo" Content="Logo" Margin="1142,5,38,5" FontFamily="ParkAveDEE" FontSize="22" 
                                Background="#6FB1A5" Foreground="White" FontWeight="Bold" Padding="0,-3,0,0"/>
                        <Button Grid.Row="3" Grid.Column="2" Name="U_Inst_Save" Click="Inst_Save" Content="Save" Margin="1142,5,38,5" FontSize="18" FontWeight="Bold" Padding="0,0,0,3"/>
                        <Button Grid.Row="1" Grid.Column="2" Name="U_Inst_Clear" Click="Inst_Clear" Content="" Margin="1224,5,12,5" FontSize="18" FontWeight="Bold" Padding="0,0,0,4" Grid.RowSpan="2"/>
                        <Button Grid.Row="3" Name="U_Inst_Delete" Click="Inst_Save" Content="Delete" Margin="907,5,267,5" FontSize="18" FontWeight="Bold" Padding="0,0,0,3"/>
                    </Grid>
                </StackPanel>
                <StackPanel Name="Header_Users" Background="#FFFDF5" Visibility="Hidden">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="120"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="6"/>
                            <RowDefinition Height="38"/>
                            <RowDefinition Height="38"/>
                            <RowDefinition Height="38"/>
                            <RowDefinition Height="5"/>
                        </Grid.RowDefinitions>
                        <Label Grid.Row="1" Grid.Column="0" Content="User Name:" FontSize="18" FontWeight="Bold" Width="120"
                               HorizontalAlignment="Left" HorizontalContentAlignment="Right"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Name="S_User_Name" KeyDown="User_OnKeyDownHandler" FontSize="16" FontWeight="Bold" Width="220" Height="30" MaxLength="12"
                                HorizontalContentAlignment="Center" Margin="-20,0,0,0" VerticalContentAlignment="Center" Padding="0,0,0,3"/>
                        <Button Grid.Row="1" Grid.Column="1" Click="User_Name_Clear"  Content="" Margin="230,5,5,5" FontSize="18" FontWeight="Bold"/>
                        <Label Grid.Row="2" Grid.Column="0" Content="Email:" FontSize="18" FontWeight="Bold" Width="120"
                               HorizontalAlignment="Left" HorizontalContentAlignment="Right"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Name="S_User_Email" KeyDown="User_OnKeyDownHandler" FontSize="14" FontWeight="Bold" Width="220" Height="30" MaxLength="20"
                                HorizontalContentAlignment="Center" Margin="-20,0,0,0" VerticalContentAlignment="Center" Padding="0,0,0,3"/>
                        <Button Grid.Row="2" Grid.Column="1" Click="User_Email_Clear"  Content="" Margin="230,5,5,5" FontSize="18" FontWeight="Bold"/>

                        <Label Grid.Row="1" Grid.Column="2" Content="User Name:" FontSize="18" FontWeight="Bold" Width="110"
                               HorizontalAlignment="Center" HorizontalContentAlignment="Right"/>
                        <TextBox Grid.Row="1" Grid.Column="2" Name="U_User_Name" FontSize="16" FontWeight="Bold" Height="30" TextChanged="SelUser_DataChanged"
                                HorizontalContentAlignment="Center" Margin="120,4,-265,4" VerticalContentAlignment="Center" Padding="0,0,0,3"/>
                        <Label Grid.Row="1" Grid.Column="2" Content="Email:" FontSize="18" FontWeight="Bold" Margin="390,0,-336,0" HorizontalContentAlignment="Right"/>
                        <TextBox Grid.Row="1" Grid.Column="2" Name="U_User_Email" FontSize="14" FontWeight="Bold" Height="30" TextChanged="SelUser_DataChanged"
                                HorizontalContentAlignment="Center" Margin="461,4,-625,4" VerticalContentAlignment="Center" Padding="0,0,0,3"/>
                        <Button Grid.Row="3" Grid.Column="0" Name="U_User_Search" Click="User_Search"  Content="Search" HorizontalAlignment="Left"
                                Width="85" Margin="11,5,0,5" FontSize="18" FontWeight="Bold" Padding="0,0,0,4"/>
                        <Button Grid.Row="3" Grid.Column="0" Name="U_User_Delete" Click="User_Delete"  Content="Delete" HorizontalAlignment="Left"
                                Width="85" Margin="110,5,-65,5" FontSize="18" FontWeight="Bold" Padding="0,0,0,4" Grid.ColumnSpan="2"/>

                        <Label Grid.Row="2" Grid.Column="2" Content="Zip:" FontSize="18" FontWeight="Bold" Width="50"
                               HorizontalAlignment="Left" HorizontalContentAlignment="Right"/>
                        <TextBox Grid.Row="2" Grid.Column="2" Name="U_User_Zip" FontSize="16" FontWeight="Bold" Height="30" TextChanged="SelUser_DataChanged"
                                HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="55,4,-15,4" Padding="0,0,0,3"/>
                        <Label Grid.Row="2" Grid.Column="2" Content="City:" FontSize="18" FontWeight="Bold" HorizontalContentAlignment="Right" Margin="140,0,-76,0"/>
                        <TextBox Grid.Row="2" Grid.Column="2" Name="U_User_City" FontSize="16" FontWeight="Bold" Height="30" TextChanged="SelUser_DataChanged"
                                HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="201,4,-245,4" Padding="0,0,0,3"/>
                        <Label Grid.Row="2" Grid.Column="2" Content="Address:" FontSize="18" FontWeight="Bold" HorizontalContentAlignment="Right" Margin="370,0,-336,0"/>
                        <TextBox Grid.Row="2" Grid.Column="2" Name="U_User_Address" FontSize="16" FontWeight="Bold" Height="30" TextChanged="SelUser_DataChanged"
                                HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="461,4,-625,4" Padding="0,0,0,3"/>
                        <Label Grid.Row="3" Grid.Column="2" Content="Státusz:" FontSize="18" FontWeight="Bold" Width="80"
                               HorizontalAlignment="Left" HorizontalContentAlignment="Right" Margin="4,0,0,0"/>
                        <ComboBox Grid.Row="3" Grid.Column="2" Name="CB_U_User_Status" Height="30" SelectionChanged="SelUser_CBChanged"
                                  VerticalAlignment="Center" HorizontalContentAlignment="Center" Background="red" FontSize="14"
                                  FontWeight="Bold" BorderThickness="1,2,1,2" Margin="90,0,-50,0" Padding="0,4,0,0"/>
                        <Label Grid.Row="3" Grid.Column="2" Content="Szerepkör:" FontSize="18" FontWeight="Bold" HorizontalContentAlignment="Right" Margin="180,0,-160,0"/>
                        <ComboBox Grid.Row="3" Grid.Column="2" Name="CB_U_User_Role" Height="30" SelectionChanged="SelUser_CBChanged"
                                  VerticalAlignment="Center" HorizontalContentAlignment="Center" Background="LightYellow" FontSize="14"
                                  FontWeight="Bold" BorderThickness="1,2,1,2" Margin="286,0,-290,0" Padding="0,4,0,0"/>
                        <Label Grid.Row="3" Grid.Column="2" Content="Hatóság:" FontSize="18" FontWeight="Bold" HorizontalContentAlignment="Right" Margin="415,0,-382,0"/>
                        <ComboBox Grid.Row="3" Grid.Column="2" Name="CB_U_User_Inst" Height="30" SelectionChanged="SelUser_CBChanged"
                                  VerticalAlignment="Center" HorizontalContentAlignment="Center" Background="LightYellow" FontSize="14"
                                  FontWeight="Bold" BorderThickness="1,2,1,2" Margin="507,0,-537,0" Padding="0,4,0,0"/>

                        <Button Grid.Row="3" Grid.Column="2" Name="U_User_Save" Click="User_Save" Content="Save" Margin="672,5,-625,5" FontSize="18" FontWeight="Bold" Padding="0,0,0,4"/>
                        <Button Grid.Row="3" Grid.Column="1" Name="U_User_SaveNew" Click="User_SaveAsNew" Content="Save as New" Margin="87,5,25,5" FontSize="18" FontWeight="Bold" Padding="0,0,0,4"/>
                        <Button Grid.Row="1" Grid.Column="2" Name="U_User_Clear" Click="User_Clear" Content="" Margin="754,5,-651,4" FontSize="18" FontWeight="Bold" Padding="0,0,0,4" Grid.RowSpan="2"/>
                        <StackPanel Grid.Row="3" Name="SP_Postit" Margin="745,5,-653,5" Grid.Column="2">
                            <Image MouseLeftButtonUp="Admin_Postit" Name="Img_Postit" Source="https://smd.hu/Team/post-it.png" Height="25" />
                        </StackPanel>
                    </Grid>
                </StackPanel>
                <StackPanel Name="Header_Reports" Background="LightCoral" Visibility="Hidden">
                </StackPanel>
                <StackPanel Name="Header_Cats" Background="LightGreen" Visibility="Hidden">
                    <Label Content="Email:" FontSize="20" FontWeight="Bold" Width="120"
                           HorizontalAlignment="Left" HorizontalContentAlignment="Right"/>
                </StackPanel>
                <StackPanel Name="Header_Challenges" Background="LightBlue" Visibility="Hidden">
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="326*"/>
                    <ColumnDefinition Width="573*"/>
                    <ColumnDefinition Width="268*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Name="Main_Ini" Background="#F0F0F0" Grid.ColumnSpan="3" Visibility="Visible">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="100"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="2*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Row="0" Grid.Column="0" CornerRadius="4" BorderThickness="0.4" BorderBrush="#FFFDF5" Background="#FFFDF5" Margin="10"/>
                            <StackPanel Name="User_Number" Grid.Row="0" Grid.Column="0" Background="#FFFDF5" Margin="15">
                                <Label Content="Felhasználók száma:" FontSize="14" HorizontalAlignment="Left" Padding="10"/>
                                <Label Name="User_Number_N" Content="-1" FontSize="24" Foreground="#FFD08700" FontWeight="Bold" HorizontalAlignment="Left" Margin="0,-10,0,0" Padding="10,0,0,0"/>
                            </StackPanel>
                            <Border Grid.Row="0" Grid.Column="1" CornerRadius="4" BorderThickness="0.4" BorderBrush="#FFFDF5" Background="#FFFDF5" Margin="10"/>
                            <StackPanel Name="Report_Number" Grid.Row="0" Grid.Column="1" Background="#FFFDF5" Margin="15">
                                <Label Content="Bejelentések száma:" FontSize="14" HorizontalAlignment="Left" Padding="10"/>
                                <Label Name="Report_Number_N" Content="-1" FontSize="24" Foreground="#FF155DFC" FontWeight="Bold" HorizontalAlignment="Left" Margin="0,-10,0,0" Padding="10,0,0,0"/>
                            </StackPanel>
                            <Border Grid.Row="0" Grid.Column="2" CornerRadius="4" BorderThickness="0.4" BorderBrush="#FFFDF5" Background="#FFFDF5" Margin="10,10,12,10"/>
                            <StackPanel Name="Vote_Number" Grid.Row="0" Grid.Column="2" Background="#FFFDF5" Margin="15">
                                <Label Content="Szavazások száma:" FontSize="14" HorizontalAlignment="Left" Padding="10"/>
                                <Label Name="Vote_Number_N" Content="-1" FontSize="24" Foreground="#FFE60076" FontWeight="Bold" HorizontalAlignment="Left" Margin="0,-10,0,0" Padding="10,0,0,0"/>
                            </StackPanel>
                        </Grid>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                        </Grid>
                    </Grid>
                </StackPanel>
                <StackPanel Name="Main_Users" Background="#F0F0F0" Grid.ColumnSpan="3" Visibility="Hidden">
                    <StackPanel Name="User_List" Grid.Row="0" Grid.Column="0" Background="#FFFFFF" Margin="10">
                        <ListView x:Name="ListView_User" GridViewColumnHeader.Click="User_SortHeaderClick" MouseDoubleClick="User_ListView_Click" Background="#FFFDF5">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Név" DisplayMemberBinding="{Binding username}" Width="140"/>
                                    <GridViewColumn Header="Email" DisplayMemberBinding="{Binding email}" Width="200"/>
                                    <GridViewColumn Header="Státusz" DisplayMemberBinding="{Binding isActive}" Width="70"/>
                                    <GridViewColumn Header="Pontok" DisplayMemberBinding="{Binding points}" Width="60"/>
                                    <GridViewColumn Header="Szerepkör" DisplayMemberBinding="{Binding role}" Width="80"/>
                                    <GridViewColumn Header="Intézmény" DisplayMemberBinding="{Binding institution}" Width="110"/>
                                    <GridViewColumn Header="Regisztráció" DisplayMemberBinding="{Binding createdAt}" Width="100"/>
                                    <GridViewColumn Header="Zip" DisplayMemberBinding="{Binding zipCode}" Width="50"/>
                                    <GridViewColumn Header="City" DisplayMemberBinding="{Binding city}" Width="90"/>
                                    <GridViewColumn Header="Address" DisplayMemberBinding="{Binding address}" Width="220"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </StackPanel>
                </StackPanel>
                <StackPanel Name="Main_Reports" Background="#FFECA8A8" Grid.ColumnSpan="3" Visibility="Hidden">
                </StackPanel>
                <StackPanel Name="Main_Cats" Background="#FFFFF156" Grid.ColumnSpan="3" Visibility="Hidden">
                </StackPanel>
                <StackPanel Name="Main_Institutions" Background="#F0F0F0" Grid.ColumnSpan="3" Visibility="Visible">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="330"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Name="Inst_List" Grid.Row="0" Grid.Column="0" Background="#FFFFFF" Margin="10,11,12,19" Height="300">
                            <ListView x:Name="ListView_Inst" GridViewColumnHeader.Click="Inst_SortHeaderClick" 
                                      MouseLeftButtonUp="Get_WorkerList" MouseDoubleClick="Inst_ListView_Click" Background="#FFFDF5">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Intézmény Neve" DisplayMemberBinding="{Binding name}" Width="200"/>
                                        <GridViewColumn Header="Email" DisplayMemberBinding="{Binding email}" Width="200"/>
                                        <GridViewColumn Header="Leírás" DisplayMemberBinding="{Binding description}" Width="300"/>
                                        <GridViewColumn Header="Reg. Dátum" DisplayMemberBinding="{Binding createdAt}" Width="80"/>
                                        <GridViewColumn Header="Logo?" DisplayMemberBinding="{Binding logo}" Width="40"/>
                                        <GridViewColumn Header="Elérhetőségek" DisplayMemberBinding="{Binding contactInfo}" Width="440"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </StackPanel>
                        <Button Name="B_Inst_Workers" Grid.Row="1" Content="Intézmény Munkatársai:" Click="Hold_WorkerList" Margin="10,-5,0,340"
                                FontSize="18" FontWeight="Bold" Padding="0,1,0,4" HorizontalAlignment="Left" Width="235"/>
                        <ListView x:Name="ListView_Workers" MouseDoubleClick="Workers_ListView_Click" Background="#FFFFFF" Margin="258,325,355,30" Grid.RowSpan="2">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Munkatárs Neve" DisplayMemberBinding="{Binding username}" Width="200"/>
                                    <GridViewColumn Header="Email" DisplayMemberBinding="{Binding email}" Width="300"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Grid>
                </StackPanel>
                <StackPanel Name="Main_Challenges" Background="#FFB9E2EF" Grid.ColumnSpan="3" Visibility="Hidden">
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
